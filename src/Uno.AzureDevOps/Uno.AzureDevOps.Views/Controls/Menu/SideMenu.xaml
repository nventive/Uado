<UserControl x:Class="Uno.AzureDevOps.Views.Controls.SideMenu"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:Uno.AzureDevOps.Views.Controls.Menu"
			 xmlns:behaviors="using:Uno.AzureDevOps.Views.Behaviors"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d"
			 d:DesignHeight="300"
			 d:DesignWidth="400">

	<Grid Background="{StaticResource Color08Brush}">

		<StackPanel x:Name="TopMenuLogoView"
					Visibility="Collapsed"
					Padding="45"
					Margin="0,15,0,0"
					VerticalAlignment="Top">
			<Image Source="ms-appx:///Assets/logoUADO.png" />
		</StackPanel>
		
		<StackPanel x:Name="TopMenuView"
					Visibility="Visible"
					VerticalAlignment="Top">

			
			<!-- Separation -->
			<Rectangle Fill="{StaticResource Color08Brush}"
					   Height="1" />

			<!-- Organization Button -->
			<StackPanel Orientation="Horizontal">
				<Grid Background="{StaticResource Color03Brush}"
					  Height="29"
					  Width="29"
					  CornerRadius="4"
					  VerticalAlignment="Center"
					  Margin="16,0,0,0">
					<TextBlock Text="{Binding Account.AccountName, Converter={StaticResource MemberInitials}}"
							   Style="{StaticResource ProjectInitialsTextBlock}" />
				</Grid>
				<Button Content="{Binding Account.AccountName}"
						Command="{Binding ToOrganizationListPage}"
						Style="{StaticResource NavigationButtonStyle}" />
			</StackPanel>
			

			<!-- Separation -->
			<Rectangle Fill="{StaticResource Color02Brush}"
					   Height="1" />

			<!-- Project Button -->
			<Button Content="All Projects"
					Command="{Binding ToProjectListPage}"
					Style="{StaticResource NavigationButtonStyle}" />

			<!-- Separation -->
			<Rectangle Fill="{StaticResource Color02Brush}"
					   Height="1" />
		</StackPanel>

		<StackPanel VerticalAlignment="Bottom"
					Background="{StaticResource Color02Brush}"
					Margin="0,0,0,0">

			<!-- Separation -->
			<Rectangle Fill="{StaticResource Color08Brush}"
					   Height="1" />

			<!-- Profile Button -->
			<StackPanel Spacing="14"
						Margin="34,0,0,0"
						Orientation="Horizontal">
				<Image Source="ms-appx:///Assets/profile.png" />
				<Button Content="Profile"
						Command="{Binding ToProfilePage}"
						Style="{StaticResource NavigationButtonStyle}" />
			</StackPanel>

			<!-- Separation -->
			<Rectangle Fill="{StaticResource Color08Brush}"
					   Height="1" />

			<StackPanel Spacing="14"
						Margin="34,0,0,0"
						Orientation="Horizontal">
				<Image Source="ms-appx:///Assets/about.png" />
				<Button Content="About"
						Command="{Binding ToProfilePage}"
						Style="{StaticResource NavigationButtonStyle}" />
			</StackPanel>

			<!-- Separation -->
			<Rectangle Fill="{StaticResource Color08Brush}"
					   Height="1" />

			<!-- Log Out Button -->
			<Grid Margin="34,0,0,0"
				  ColumnSpacing="14">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<Grid CornerRadius="16"
					  Height="24"
					  Width="24">
					<Grid.Background>
						<ImageBrush behaviors:ImageBrushStreamSourceBehavior.Source="{Binding UserProfile.Result.Image}" />
					</Grid.Background>
				</Grid>
				<StackPanel Grid.Column="1"
							Orientation="Vertical">
					<Button Content="Log Out"
							Command="{Binding Logout}"
							Style="{StaticResource NavigationButtonStyle}" />
					<TextBlock Style="{StaticResource Typo18}"
							   Margin="15,0,0,0"
							   Text="{Binding UserProfile.Result.Email}"
							   TextWrapping="NoWrap" />
				</StackPanel>
			</Grid>

			<!-- Separation -->
			<Rectangle Fill="{StaticResource Color02Brush}"
					   Height="1" />
			<StackPanel Background="{StaticResource Color08Brush}" Padding="0,15">
				<TextBlock Text="{Binding AppVersion}"
						   HorizontalAlignment="Center"
						   Style="{StaticResource Typo07}" />
			</StackPanel>
		</StackPanel>
	</Grid>
</UserControl>
